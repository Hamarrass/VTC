{% extends 'base.html.twig' %}

{% block title %}Liste des Disponibilités{% endblock %}

{% block body %}
    <h1>Liste des Disponibilités</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Date Début</th>
                <th>Date Fin</th>
                <th>Chauffeur</th>
            </tr>
        </thead>
        <tbody>
            {% for disponibilite in disponibilites %}
            <tr>
                <td>{{ disponibilite.id }}</td>
                <td>{{ disponibilite.dateDebut|date('Y-m-d H:i') }}</td>
                <td>{{ disponibilite.dateFin|date('Y-m-d H:i') }}</td>
                <td>{{ disponibilite.chauffeur.nom }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
